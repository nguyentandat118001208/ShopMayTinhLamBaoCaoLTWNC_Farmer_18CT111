                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Quan ly anh</h4>
                </div>
                <div class="modal-body">
                    <div class="imageList" style="margin:4px">

                    </div>
                    <input type="button" id="btnChooImages" class="btn btn-primary" value="chon anh" />
                    <input type="hidden" id="hiProductID" value="0"/>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" id="btnSaveImages">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
