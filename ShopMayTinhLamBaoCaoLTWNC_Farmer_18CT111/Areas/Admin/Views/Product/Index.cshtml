            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Tables</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                        <li class="breadcrumb-item active">Tables</li>
                    </ol>
                    <div class="card mb-4">
                        <div class="card-body">
                            <a target="_blank" href="https://datatables.net/">official DataTables documentation</a>
                            .
                        </div>
                    </div>
                </div>

                <div>
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Danh Sach Nguoi Dung
                            </div>
                            <div class="panel-body">


                                <!--SEARCH-->
                                @using (Html.BeginForm("Index", "Product", FormMethod.Get))
                                {
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="col-md-4">
                                                <input type="text" value="@ViewBag.SearchString" name="searchString" />
                                            </div>
                                            <div class="col-md-4">
                                                <button type="submit">Tìm Kiếm</button><!--Cái Submit này sẽ đẩy searchString lên Thông Số(Index)-->
                                            </div>
                                        </div>
                                    </div>
                                }

                                <!---->

                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Image</th>
                                                <th>CreatedDate</th>
                                                <th>#</th>



                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr id="row_@item.ID">
                                                    <td>@item.Name</td>
                                                    <td><img src="@item.Image" width="100" /></td>
                                                    <td>@item.CreatedDate</td>
                                                    <td>@item.Price</td>
                                                    <td>
                                                        <a href="#" data-id="@item.ID" class="btn-images">Quan Ly Anh</a>
                                                        <a href="/Admin/Product/Edit/@item.ID">Sửa</a>

                                                        @Ajax.ActionLink("Xoá", "Delete", new { @id = item.ID }, new AjaxOptions
                                                   {
                                                       Confirm = "Chac chan ban co muon xoa khong ?",
                                                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                                                       HttpMethod = "Delete"
                                                   })
                                                    </td>


                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = ViewBag.SearchString }))
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


